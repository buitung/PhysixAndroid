<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/Welcome" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/Copyright" />

    <RelativeLayout
        android:id="@+id/lblCircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="40dp" >

        <TextView
            android:id="@+id/lblRadius"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:text="Radius" />

        <EditText
            android:id="@+id/txtRadius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lblRadius"
            android:layout_alignBottom="@+id/lblRadius"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/lblRadius"
            android:ems="10"
            android:hint="Radius of the Circle" >
        </EditText>

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtRadius"
            android:layout_marginTop="50dp"
            android:text="@string/Calculate" />

        <TextView
            android:id="@+id/lblArea"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCalculate"
            android:layout_marginTop="40dp"
            android:layout_toLeftOf="@+id/txtRadius"
            android:text="Area" />

        <TextView
            android:id="@+id/lblCircumference"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblArea"
            android:layout_marginTop="40dp"
            android:layout_toLeftOf="@+id/txtRadius"
            android:text="Circumference" />

        <Button
            android:id="@+id/btnInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:text="@string/Information" />

        <TextView
            android:id="@+id/lblAreaAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lblArea"
            android:layout_alignBottom="@+id/lblArea"
            android:layout_alignLeft="@+id/txtRadius"
            android:layout_alignParentRight="true"
            android:text="" />

        <TextView
            android:id="@+id/lblCircumferenceAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lblCircumference"
            android:layout_alignLeft="@+id/lblAreaAns"
            android:layout_alignParentRight="true"
            android:text="" />
    </RelativeLayout>

</RelativeLayout>