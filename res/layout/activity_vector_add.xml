<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VectorAddActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/Welcome"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:text="@string/Copyright"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/lblVectorVectorAdd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="24dp"
        android:text="Vector"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lblVectorVectorAdd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblVectorVectorAdd1"
        android:layout_below="@+id/lblVectorVectorAdd1"
        android:layout_marginTop="24dp"
        android:text="Vector"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtVectorYVectorAdd1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblVectorVectorAdd2"
        android:layout_toRightOf="@+id/txtVectorXVectorAdd1"
        android:ems="10"
        android:hint="y"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/txtVectorZVectorAdd1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtVectorYVectorAdd1"
        android:layout_alignBottom="@+id/txtVectorYVectorAdd1"
        android:layout_toRightOf="@+id/txtVectorYVectorAdd1"
        android:ems="10"
        android:hint="z"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/txtVectorXVectorAdd1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblVectorVectorAdd2"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/lblVectorVectorAdd1"
        android:ems="10"
        android:hint="x"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/txtVectorXVectorAdd2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblVectorVectorAdd2"
        android:layout_alignLeft="@+id/txtVectorXVectorAdd1"
        android:ems="10"
        android:hint="x"
        android:inputType="numberSigned" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtVectorYVectorAdd2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtVectorXVectorAdd2"
        android:layout_toRightOf="@+id/txtVectorXVectorAdd2"
        android:ems="10"
        android:hint="y"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/txtVectorZVectorAdd2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtVectorXVectorAdd2"
        android:layout_alignRight="@+id/txtVectorZVectorAdd1"
        android:ems="10"
        android:hint="z"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/btnCalculateVectorAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblVectorVectorAdd2"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/lblVectorVectorAdd2"
        android:layout_marginTop="38dp"
        android:text="Calculate" />

    <TextView
        android:id="@+id/lblVectorSumVectorAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCalculateVectorAdd"
        android:layout_marginTop="84dp"
        android:layout_toLeftOf="@+id/txtVectorXVectorAdd1"
        android:text="Vector"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lblVectorSumVectorAdd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCalculateVectorAdd"
        android:layout_below="@+id/btnCalculateVectorAdd"
        android:layout_marginTop="22dp"
        android:text="Vector Sum"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lblVectorSumXVectorAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblVectorSumVectorAdd"
        android:layout_alignBottom="@+id/lblVectorSumVectorAdd"
        android:layout_alignLeft="@+id/txtVectorXVectorAdd2"
        android:layout_toLeftOf="@+id/txtVectorYVectorAdd2"
        android:text="  " />

    <TextView
        android:id="@+id/lblVectorSumYVectorAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblVectorSumXVectorAdd"
        android:layout_alignBottom="@+id/lblVectorSumXVectorAdd"
        android:layout_alignLeft="@+id/txtVectorYVectorAdd2"
        android:layout_alignRight="@+id/txtVectorYVectorAdd2"
        android:text="  " />

    <TextView
        android:id="@+id/lblVectorSumZVectorAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblVectorSumYVectorAdd"
        android:layout_alignBottom="@+id/lblVectorSumYVectorAdd"
        android:layout_alignLeft="@+id/txtVectorZVectorAdd2"
        android:layout_alignRight="@+id/txtVectorZVectorAdd2"
        android:text=" " />

    <Button
        android:id="@+id/btnInfoVectorAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblVectorSumVectorAdd"
        android:layout_alignRight="@+id/btnCalculateVectorAdd"
        android:layout_below="@+id/lblVectorSumVectorAdd"
        android:layout_marginTop="30dp"
        android:onClick="onClickDialog"
        android:text="Information" />

</RelativeLayout>