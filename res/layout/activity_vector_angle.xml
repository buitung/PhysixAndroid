<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VectorAngleActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/Welcome"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:text="@string/Copyright"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/lblVectorVectorAngle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="24dp"
        android:text="Vector"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lblVectorVectorAngle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblVectorVectorAngle1"
        android:layout_below="@+id/lblVectorVectorAngle1"
        android:layout_marginTop="24dp"
        android:text="Vector"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtVectorYVectorAngle1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblVectorVectorAngle2"
        android:layout_toRightOf="@+id/txtInitialVelocity"
        android:ems="10"
        android:hint="y"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtVectorYVectorAngle1"
        android:layout_alignBottom="@+id/txtVectorYVectorAngle1"
        android:layout_toRightOf="@+id/txtVectorYVectorAngle1"
        android:ems="10"
        android:hint="z"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/txtInitialVelocity"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblVectorVectorAngle2"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/lblVectorVectorAngle1"
        android:ems="10"
        android:hint="x"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblVectorVectorAngle2"
        android:layout_alignLeft="@+id/txtInitialVelocity"
        android:ems="10"
        android:hint="x"
        android:inputType="numberSigned" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText4"
        android:layout_toRightOf="@+id/editText4"
        android:ems="10"
        android:hint="y"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignRight="@+id/editText3"
        android:ems="10"
        android:hint="z"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/btnCalculateProjectile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblVectorVectorAngle2"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/lblVectorVectorAngle2"
        android:layout_marginTop="38dp"
        android:text="Calculate" />

    <TextView
        android:id="@+id/lblDistanceAnsProj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCalculateProjectile"
        android:layout_below="@+id/btnCalculateProjectile"
        android:layout_marginTop="22dp"
        android:text="Angle bet ween two vectors"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lblHeightAnsProj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblAirTime"
        android:layout_alignBottom="@+id/lblAirTime"
        android:layout_alignLeft="@+id/editText4"
        android:layout_toLeftOf="@+id/editText5"
        android:text="  " />

    <Button
        android:id="@+id/btnInformationProjectile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblAirTime"
        android:layout_alignRight="@+id/btnCalculateProjectile"
        android:layout_below="@+id/lblAirTime"
        android:layout_marginTop="30dp"
        android:text="Information" />

    <TextView
        android:id="@+id/lblAirTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblDistanceAnsProj"
        android:layout_below="@+id/lblDistanceAnsProj"
        android:layout_marginTop="36dp"
        android:text="Angle"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblHeightAnsProj"
        android:layout_alignBottom="@+id/lblHeightAnsProj"
        android:layout_alignRight="@+id/editText6"
        android:text="Deg/Rad" />

</RelativeLayout>
