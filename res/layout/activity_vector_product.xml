<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".VectorProductActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/Welcome"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:text="@string/Copyright"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/lblVectorVectorProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="24dp"
        android:text="Vector"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtVectorZVectorProduct1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtVectorYVectorProduct1"
        android:layout_alignBottom="@+id/txtVectorYVectorProduct1"
        android:layout_toRightOf="@+id/txtVectorYVectorProduct1"
        android:ems="10"
        android:hint="z"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/lblProductLabelVectorProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCalculateVectorProduct"
        android:layout_below="@+id/btnCalculateVectorProduct"
        android:layout_marginTop="22dp"
        android:text="Product of one vector and a number"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lblProductXVectorProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblProductAnsVectorProduct"
        android:layout_alignBottom="@+id/lblProductAnsVectorProduct"
        android:layout_alignLeft="@+id/txtVectorXVectorProduct1"
        android:layout_alignRight="@+id/txtVectorXVectorProduct1"
        android:text="  " />

    <Button
        android:id="@+id/btnInformationVectorProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblProductAnsVectorProduct"
        android:layout_alignRight="@+id/btnCalculateVectorProduct"
        android:layout_below="@+id/lblProductAnsVectorProduct"
        android:layout_marginTop="30dp"
        android:onclick="OnClickDialog"
        android:text="Information" />

    <TextView
        android:id="@+id/lblProductAnsVectorProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblProductLabelVectorProduct"
        android:layout_below="@+id/lblProductLabelVectorProduct"
        android:layout_marginTop="36dp"
        android:text="Vector"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/txtVectorXVectorProduct1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCalculateVectorProduct"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/lblVectorVectorProduct"
        android:ems="10"
        android:hint="x"
        android:inputType="numberSigned" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtVectorYVectorProduct1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCalculateVectorProduct"
        android:layout_toRightOf="@+id/txtVectorXVectorProduct1"
        android:ems="10"
        android:hint="y"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/btnCalculateVectorProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblVectorVectorProduct"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/lblVectorVectorProduct"
        android:layout_marginTop="56dp"
        android:text="Calculate" />

    <EditText
        android:id="@+id/txtMultiplierVectorProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnCalculateVectorProduct"
        android:layout_alignRight="@+id/btnCalculateVectorProduct"
        android:layout_below="@+id/lblVectorVectorProduct"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Number to be multiplied"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/lblProductYVectorProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblProductXVectorProduct"
        android:layout_alignBottom="@+id/lblProductXVectorProduct"
        android:layout_alignRight="@+id/txtVectorYVectorProduct1"
        android:layout_toRightOf="@+id/lblProductXVectorProduct"
        android:text="  " />

    <TextView
        android:id="@+id/lblProductZVectorProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblProductYVectorProduct"
        android:layout_alignBottom="@+id/lblProductYVectorProduct"
        android:layout_alignLeft="@+id/txtVectorZVectorProduct1"
        android:layout_alignRight="@+id/txtVectorZVectorProduct1"
        android:text="  " />

</RelativeLayout>